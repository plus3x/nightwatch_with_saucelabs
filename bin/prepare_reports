#!/bin/sh

REPORTS_FOLDER=$1

pushd $REPORTS_FOLDER

for dir in *; do
  if [ -d "${dir}" ]; then
    case "$(uname -s)" in
    Darwin)
      sed -i '' "s/package=\"[^\"]*\"/package=\"${dir}\"/g" ${dir}/*.xml
      ;;
    Linux)
      sed -i "s/package=\"[^\"]*\"/package=\"${dir}\"/g" ${dir}/*.xml
      ;;
    esac
  fi
done

popd
